      <!-- Login Form -->
      <form id="loginForm" method="POST" class="space-y-4">
        <h1 class="text-2xl font-semibold text-center mb-4">Letâ€™s Go</h1>

        <!-- Username -->
        <div>
          <label for="txt_name" class="block mb-1 font-medium">Enter Your Name</label>
          <input 
            type="text"
            id="txt_name"
            name="Name"
            autocomplete="off"
            maxlength="60"
            placeholder="User Name"
            required
            class="w-full p-3 border border-gray-300 rounded-lg focus:border-blue-600 focus:ring-2 focus:ring-blue-300 focus:outline-none transition" />
          <p id="name_error" class="text-red-600 text-sm mt-1 hidden"></p>
        </div>

        <!-- Password -->
        <div>
          <label for="txt_Password" class="block mb-1 font-medium">Enter Your Password</label>
          <input 
            type="password"
            id="txt_Password"
            name="Password"
            autocomplete="off"
            maxlength="60"
            placeholder="Password"
            required
            class="w-full p-3 border border-gray-300 rounded-lg focus:border-blue-600 focus:ring-2 focus:ring-blue-300 focus:outline-none transition" />
          <p id="password_error" class="text-red-600 text-sm mt-1 hidden"></p>
        </div>

        <!-- Error Message -->
        <p id="error" class="text-red-600 text-sm text-center"></p>

        <!-- Button -->
        <button 
          type="submit" 
          id="button_login"
          class="w-full py-3 text-white text-lg font-semibold rounded-lg bg-gradient-to-r from-cyan-500 to-blue-600 hover:from-cyan-400 hover:to-blue-500 hover:-translate-y-0.5 shadow-md hover:shadow-lg transition-all duration-300">
          Login
        </button>

      </form>
    </div>

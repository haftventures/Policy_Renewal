      </button>
    </div>
  </div>
</div>




  <!-- Script -->
  <script src="/assets/js/common_scripts.js"></script>
  <script>
    $("#loginForm").on("submit", async function (e) {
      e.preventDefault();

      const Name = $("#txt_name").val().trim();
      const Password = $("#txt_Password").val().trim();

      if (!Name || !Password) {
        $("#error").text("Please enter username and password.");
        return;
      }

      try {
        const response = await fetch("/login", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ Name, Password })
        });

        const result = await response.json();

        if (result.success) {
          window.location.href = result.redirect;
        } else if (result.success == false) {
           showmobilenumber("Error!", "Please Cheack Your username and password.");
        }
      } catch (err) {
        console.error(err);
        $("#error").text("Network error. Try again.");
      }
    });


</script>
